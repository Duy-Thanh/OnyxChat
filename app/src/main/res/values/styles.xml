<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
        
        <!-- Component colors -->
        <item name="materialCardViewStyle">@style/CardStyle</item>
        <item name="toolbarStyle">@style/CustomToolbar</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>
    </style>

    <!-- Theme with no action bar and immersive experience - REMOVED DUPLICATE -->
    
    <!-- Toolbar style -->
    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/background_dark</item>
        <item name="titleTextColor">@color/text_primary_dark</item>
        <item name="subtitleTextColor">@color/text_secondary_dark</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <!-- Bottom Navigation style -->
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/background_dark</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
    </style>
    
    <!-- Card style -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <!-- Style for circular image views (avatars) -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Style for chat input -->
    <style name="ChatInputStyle">
        <item name="android:background">@drawable/bg_chat_input</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">4</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
    </style>
    
    <!-- Style for action buttons in chat -->
    <style name="ChatActionButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">12dp</item>
        <item name="tint">@color/accent</item>
    </style>
    
    <!-- Floating action button style -->
    <style name="CustomFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/white</item>
        <item name="rippleColor">@color/primary_dark</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
    </style>
    
    <!-- Text appearance styles -->
    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>
    
    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    
    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>
    
    <!-- Settings button style -->
    <style name="Widget.App.Button.Settings" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/primary</item>
        <item name="iconPadding">16dp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
</resources> 