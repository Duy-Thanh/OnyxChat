<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_encryption">
        <SwitchPreferenceCompat
            app:key="post_quantum_encryption"
            app:title="@string/post_quantum_encryption"
            app:defaultValue="true" />

        <Preference
            app:key="generate_new_key"
            app:title="@string/generate_new_key"
            app:icon="@drawable/ic_key" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_privacy">
        <SwitchPreferenceCompat
            app:key="screen_security"
            app:title="@string/screen_security"
            app:summary="@string/screen_security_description"
            app:defaultValue="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/server_settings">
        <EditTextPreference
            app:key="server_url"
            app:title="@string/server_url"
            app:summary="@string/server_url_description"
            app:defaultValue="http://10.0.2.2:8082"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/about">
        <Preference
            app:key="privacy_policy"
            app:title="@string/view_privacy_policy"
            app:icon="@drawable/ic_privacy_policy" />
            
        <Preference
            app:key="terms_of_service"
            app:title="@string/view_terms_of_service"
            app:icon="@drawable/ic_terms" />
    </PreferenceCategory>

</PreferenceScreen> 